<header id="navbar" class="py-10 fixed w-full z-10 transition-all duration-300">
    <div class="cust-container">
        <div class="flex justify-between items-center">
            <a href="/">
                <h2 class="play-bold text-4xl">
                    Hi<span class="text-primary">Bro</span>
                </h2>
            </a>
            <nav class="hidden lg:flex justify-between gap-x-10 play-regular">
                <a href="/" class="text-lg">Home</a>
                <a href="/about" class="text-lg">About</a>
                <a href="/works" class="text-lg">Works</a>
                <a href="/service" class="text-lg">Service</a>
                <a href="/blog" class="text-lg">Blog</a>
                <a href="/contact" class="text-lg">Contact</a>
            </nav>
            <div id="side-nav-btn" class="lg:hidden flex items-center">
                <i class="fa-solid fa-bars text-2xl"></i>
            </div>
        </div>
    </div>
</header>

<script is:inline>
    const navbar = document.querySelector("header#navbar");
    window.addEventListener("scroll", (e) => {
        e.preventDefault();

        if (window.scrollY >= 50) {
            navbar.classList.remove("py-10");
            navbar.classList.add("py-5", "bg-white", "shadow-xl");
        } else {
            navbar.classList.remove("py-5", "bg-white", "shadow-xl");
            navbar.classList.add("py-10");
        }
    });

    window.addEventListener("load", (e) => {
        e.preventDefault();
        if (window.scrollY >= 50) {
            navbar.classList.remove("py-10");
            navbar.classList.add("py-5", "bg-white", "shadow-xl");
        }
    });
</script>
