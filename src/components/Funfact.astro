---
import Section from "./reusable/section.astro";
---

<section class="bg-[#37403D] py-20 xl:py-28 2xl:mt-14">
    <div class="cust-container">
        <div class="sm:flex sm:gap-x-2 text-center sm:text-start">
            <div class="sm:w-2/6 text-center lg:flex items-center">
                <h4
                    class="play-bold text-primary text-5xl lg:6xl xl:text-7xl mr-5"
                >
                    12
                </h4>
                <p class="mt-3 play-semibold text-white text-xl lg:text-3xl">
                    Years of <br /> Experience
                </p>
            </div>
            <div
                class="sm:w-2/6 text-center lg:flex items-center mt-10 sm:mt-0"
            >
                <h4
                    class="play-bold text-primary text-5xl lg:6xl xl:text-7xl mr-5"
                >
                    200
                </h4>
                <p class="mt-3 play-semibold text-white text-xl lg:text-3xl">
                    Worldwide <br /> Clients
                </p>
            </div>
            <div
                class="sm:w-2/6 text-center lg:flex items-center mt-10 sm:mt-0"
            >
                <h4
                    class="play-bold text-primary text-5xl lg:6xl xl:text-7xl mr-5"
                >
                    3K
                </h4>
                <p class="mt-3 play-semibold text-white text-xl lg:text-3xl">
                    Total <br /> Projects
                </p>
            </div>
        </div>
    </div>
</section>
