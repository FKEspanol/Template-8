---
import Section from "./reusable/section.astro";
import SectionHeader from "./reusable/sectionHeader.astro";
---

<Section id="contact">
    <SectionHeader
        heading="Let's Start A New Project"
        subHeading="Contact Me"
    />
    <div class="mt-20 lg:flex">
        <div class="lg:px-3 lg:w-1/2 mb-10 lg:mb-0">
            <div class="flex mb-5">
                <i
                    class="fa-solid fa-location rounded-full p-7 mr-5 bg-primary text-white"
                ></i>
                <div class="leading-7">
                    <h6 class="play-semibold text-xl mb-2">Location</h6>
                    <p class="text-lg text-smoke">Davao City, Philippines</p>
                </div>
            </div>
            <div class="flex mb-5">
                <i
                    class="fa-solid fa-phone rounded-full p-7 mr-5 bg-primary text-white"
                ></i>
                <div class="leading-7">
                    <h6 class="play-semibold text-xl mb-2">Phone</h6>
                    <p class="text-lg text-smoke">+123456789</p>
                </div>
            </div>
            <div class="flex mb-5">
                <i
                    class="fa-solid fa-envelope rounded-full p-7 mr-5 bg-primary text-white"
                ></i>
                <div class="leading-7">
                    <h6 class="play-semibold text-xl mb-2">Email</h6>
                    <p class="text-lg text-smoke">hibro@email.com</p>
                </div>
            </div>
        </div>
        <form action="" class="lg:px-3 lg:w-1/2">
            <div class="sm:grid sm:grid-cols-2 gap-3">
                <div class="col-span-1 mb-3 sm:mb-3">
                    <input
                        type="text"
                        name=""
                        id=""
                        class="p-3 rounded w-full sm:text-lg border focus:outline-none focus:border-primary focus:ring-primary focus:ring-1"
                        placeholder="Your Name"
                    />
                </div>
                <div class="col-span-1 mb-3 sm:mb-3">
                    <input
                        type="email"
                        name=""
                        id=""
                        class="p-3 rounded w-full sm:text-lg border focus:outline-none focus:border-primary focus:ring-primary focus:ring-1"
                        placeholder="Your Email"
                    />
                </div>
                <div class="col-span-1 mb-3 sm:mb-3">
                    <input
                        type="text"
                        name=""
                        id=""
                        class="p-3 rounded w-full sm:text-lg border focus:outline-none focus:border-primary focus:ring-primary focus:ring-1"
                        placeholder="Your Number"
                    />
                </div>
                <div class="col-span-1 mb-3 sm:mb-3">
                    <input
                        type="text"
                        name=""
                        id=""
                        class="p-3 rounded w-full sm:text-lg border focus:outline-none focus:border-primary focus:ring-primary focus:ring-1"
                        placeholder="Your Subject"
                    />
                </div>
                <div class="col-span-2">
                    <textarea
                        name=""
                        id=""
                        class="p-3 rounded w-full sm:text-lg border focus:outline-none focus:border-primary focus:ring-primary focus:ring-1"
                        rows="5"
                        placeholder="Your Message"></textarea>
                </div>
            </div>
            <button
                type="submit"
                class="mt-3 px-9 py-3 play-semibold text-white bg-primary rounded-md"
                >Submit</button
            >
        </form>
    </div>
    <div
        style="text-decoration:none; overflow:hidden;width:100%;height:500px;"
        class="mt-20"
    >
        <div id="my-map-canvas" style="height:100%; width:100%;max-width:100%;">
            <iframe
                style="height:100%;width:100%;border:0;"
                frameborder="0"
                src="https://www.google.com/maps/embed/v1/place?q=Cabantian,+Buhangin,+Davao+City,+Davao+del+Sur,+Philippines&key=AIzaSyBFw0Qbyq9zTFTd-tUY6dZWTgaQzuU17R8"
            ></iframe>
        </div><a
            class="from-embedmap-code"
            href="https://www.bootstrapskins.com/themes"
            id="authorize-maps-data">premium bootstrap themes</a
        ><style>
            #my-map-canvas img {
                max-width: none !important;
                background: none !important;
                font-size: inherit;
                font-weight: inherit;
            }
        </style>
    </div>
</Section>
